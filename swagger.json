    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "background": {
            "type": "string"
          }
        }
      },
      "Imovel": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "cidade": {
            "type": "string"
          },
          "bairro": {
            "type": "string"
          },
          "rua": {
            "type": "string"
          },
          "numero": {
            "type": "number"
          },
          "tipoDeImovel": {
            "type": "string"
          },
          "tipoDeNegocio": {
            "type": "string"
          },
          "atualDisponibilidade": {
            "type": "string"
          },
          "telefoneContato": {
            "type": "string"
          },
          "imagemImovel": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
